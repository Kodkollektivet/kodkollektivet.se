[Unit]
Description=Unitime gunicorn daemon
After=network.target

[Service]
User={{ deploy.username }}
Group={{ deploy.group }}
Restart=on-failure
RestartSec=5
WorkingDirectory={{ projectpaths.current }}
ExecStart={{ projectpaths.current }}/venv/bin/gunicorn --workers 4 --bind unix:{{ projectpaths.tmp }}/unitime.sock settings.wsgi:application

[Install]
WantedBy=multi-user.target
